<% form.fields_for :settings, form.object.settings do |settings_fields| %>
  <h3><%= t(".text_settings") %></h3>

  <div class="row">
    <%= settings_fields.translated :text_field, :title, label: t("decidim.decidim_awesome.content_blocks.map.title") %>
    <%= settings_fields.translated :text_field, :link_text, label: t("decidim.decidim_awesome.content_blocks.map.link_text") %>
    <%= settings_fields.translated :text_field, :link_url, label: t("decidim.decidim_awesome.content_blocks.map.link_url") %>
  </div>
  <div class="row two-buttons">
    <div><%= settings_fields.translated :text_field, :button_1_text, label: t("decidim.decidim_awesome.content_blocks.map.button_1_text") %></div>
    <div><%= settings_fields.translated :text_field, :button_1_url, label: t("decidim.decidim_awesome.content_blocks.map.button_1_url") %></div>
  </div>
  <div class="row two-buttons">
    <div><%= settings_fields.translated :text_field, :button_2_text, label: t("decidim.decidim_awesome.content_blocks.map.button_2_text") %></div>
    <div><%= settings_fields.translated :text_field, :button_2_url, label: t("decidim.decidim_awesome.content_blocks.map.button_2_url") %></div>
  </div>
  <div class="row two-buttons">
    <div><%= settings_fields.translated :text_field, :button_3_text, label: t("decidim.decidim_awesome.content_blocks.map.button_3_text") %></div>
    <div><%= settings_fields.translated :text_field, :button_3_url, label: t("decidim.decidim_awesome.content_blocks.map.button_3_url") %></div>
  </div>
  <div class="row two-buttons">
    <div><%= settings_fields.translated :text_field, :button_4_text, label: t("decidim.decidim_awesome.content_blocks.map.button_4_text") %></div>
    <div><%= settings_fields.translated :text_field, :button_4_url, label: t("decidim.decidim_awesome.content_blocks.map.button_4_url") %></div>
  </div>
  <div class="row two-buttons">
    <div><%= settings_fields.translated :text_field, :button_5_text, label: t("decidim.decidim_awesome.content_blocks.map.button_5_text") %></div>
    <div><%= settings_fields.translated :text_field, :button_5_url, label: t("decidim.decidim_awesome.content_blocks.map.button_5_url") %></div>
  </div>

  <hr>

  <h3><%= t(".map_settings") %></h3>

  <div class="row">
    <%= settings_fields.number_field :map_height, label: t("decidim.decidim_awesome.content_blocks.map.map_height") %>
  </div>

  <div class="row">
    <%= settings_fields.text_field :map_center, label: t("decidim.decidim_awesome.content_blocks.map.map_center") %>
    <%= t("decidim.decidim_awesome.content_blocks.map.map_center_help") %>
  </div>

  <div class="row">
    <%= settings_fields.number_field :map_zoom, label: t("decidim.decidim_awesome.content_blocks.map.map_zoom") %>
    <%= t("decidim.decidim_awesome.content_blocks.map.map_zoom_help") %>
  </div>

  <div class="row">
    <%= settings_fields.number_field :truncate, label: t("decidim.decidim_awesome.content_blocks.map.truncate") %>
  </div>
<% end %>

<style>
  .two-buttons {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1em;
  }
  .two-buttons > div {
    width: 50%;
  }
</style>
